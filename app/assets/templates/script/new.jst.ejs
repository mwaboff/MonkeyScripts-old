<div class="row" id="script-new">
  <h3>New Script</h3>
  <form action="/api/scripts" id="new-script" method="POST">
    <div class="form-alert"></div>
    <div class="form-group">
      <label for="title">Title:</label>
      <input type="text"
             class="form-control"
             id="title"
             name="script[title]"
             placeholder="My First Script">
    </div>
    <div class="form-group">
      <label for="description">Description:</label>
      <textarea class="form-control"
                id="description"
                name="script[description]"
                placeholder="Entice us with a description."></textarea>
    </div>
    <div class="form-group">
      <label for="code">Code:</label>
      <textarea class="form-control monkey-code"
                id="code"
                name="script[code]"
                placeholder="Paste your script into here!"></textarea>
    </div>
    <input type="submit" class="btn btn-primary" id="submit-script" value="Save">
  </form>
</div>